@model Notebook.Models.Note

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<p>Are you sure you want to delete this?</p>
<div>
    <div>
        <h4>@Html.DisplayFor(model => model.NoteTitle)</h4>
        <p>@Html.DisplayFor(model => model.NoteContent)</p>
        <p>Created At: @Html.DisplayFor(model => model.CreatedAt)</p>
        <p>Edited At: @Html.DisplayFor(model => model.EditedAt)</p>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
